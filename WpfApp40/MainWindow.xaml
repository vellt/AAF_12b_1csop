<Window x:Class="WpfApp40.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp40"
        mc:Ignorable="d"
        Title="Galéria" Height="430" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image Name="kep" Source="01.jpg" Stretch="UniformToFill" Height="300"/>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Name="vissza" Content="Vissza"  Margin="20" Height="50" Width="200"/>
                <Button Name="elore" Content="Előre"   Margin="20" Height="50" Width="200"/>
            </StackPanel>
        </StackPanel>
    </Grid>
