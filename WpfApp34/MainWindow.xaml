<Window x:Class="WpfApp34.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp34"
        mc:Ignorable="d"
        Icon="hand.ico"
        BorderThickness="5"
        BorderBrush="White"
        Title="Üdvözlő app" Height="300" Width="800">
    <Grid Background="CadetBlue">
        <StackPanel Orientation="Horizontal" 
                    Background="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Név" FontSize="50" Margin="20"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Text="Vezetéknév"/>
                <TextBox Name="vezeteknev" Width="200" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="20 0">
                <TextBlock Text="Keresztnév *"/>
                <TextBox Name="keresztnev" Width="200" FontSize="20"/>
            </StackPanel>
            <Button Name="gomb" Height="75" Width="75" Margin="0 0 20 0" Content="Helló"/>
        </StackPanel>
    </Grid>
</Window>
